<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/text_color_blue"
        android:gravity="center"
        android:text="修改密钥"
        android:textColor="@color/white"
        android:textSize="@dimen/text_weight" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="27dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:text="设置新密码"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_alterpsw"
            android:layout_width="343dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="54dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="15dp"
            android:background="@color/usermg_rv_bg"
            android:inputType="numberPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginTop="20dp"
            android:text="设置新密码"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_agalterpsw"
            android:layout_width="343dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="54dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="15dp"
            android:background="@color/usermg_rv_bg"
            android:inputType="numberPassword" />

        <Button
            android:id="@+id/btn_alterpsw"
            android:layout_width="149dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_bg_ripple_normal"
            android:paddingHorizontal="50dp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="22sp" />


    </LinearLayout>
</LinearLayout>