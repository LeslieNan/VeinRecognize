<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/item_usermg_list"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_item_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:src="@drawable/item_selected" />

    <TextView
        android:id="@+id/tv_item_id"
        android:layout_width="220dp"
        android:layout_height="24dp"
        android:layout_marginStart="87dp"
        android:gravity="center"
        android:textSize="@dimen/text_usermg_list_weight"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:background="@mipmap/vertical_line" />

    <TextView
        android:id="@+id/tv_item_username"
        android:layout_width="146dp"
        android:layout_height="24dp"
        android:layout_marginStart="100dp"
        android:gravity="center"
        android:textSize="@dimen/text_usermg_list_weight"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:background="@mipmap/vertical_line" />

    <TextView
        android:id="@+id/tv_item_group"
        android:layout_width="146dp"
        android:layout_height="23dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:gravity="center"
        android:textSize="@dimen/text_usermg_list_weight"/>

</LinearLayout>