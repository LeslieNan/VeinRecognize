<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.yourstory.jxd1500.activity.RecognizeModeActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="34dp"
        android:src="@mipmap/fanhui"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_certification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="认证模式"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_certification_1to1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/certificaiton_btnbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="指静脉1:1"
        android:textSize="36sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_certification"
        android:layout_marginTop="80dp"/>
    <ImageView
        android:id="@+id/iv_certification_select_1to1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_certification_1to1"
        android:background="@drawable/certification_select"
        app:layout_constraintTop_toTopOf="@id/tv_certification_1to1"
        app:layout_constraintBottom_toBottomOf="@id/tv_certification_1to1"
        android:layout_marginStart="22dp"/>

    <TextView
        android:id="@+id/tv_certification_1ton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/certificaiton_btnbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="指静脉1:N"
        android:gravity="center"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@id/tv_certification_1to1"
        android:layout_marginTop="80dp"/>
    <ImageView
        android:id="@+id/iv_certification_select_1ton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_certification_1ton"
        android:background="@drawable/certification_select"
        app:layout_constraintTop_toTopOf="@id/tv_certification_1ton"
        app:layout_constraintBottom_toBottomOf="@id/tv_certification_1ton"
        android:layout_marginStart="22dp"/>

    <TextView
        android:id="@+id/tv_certification_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/certificaiton_btnbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="密码认证"
        android:textSize="36sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_certification_1ton"
        android:layout_marginTop="80dp"/>
    <ImageView
        android:id="@+id/iv_certification_select_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_certification_psw"
        android:background="@drawable/certification_select"
        app:layout_constraintTop_toTopOf="@id/tv_certification_psw"
        app:layout_constraintBottom_toBottomOf="@id/tv_certification_psw"
        android:layout_marginStart="22dp"/>

</android.support.constraint.ConstraintLayout>
